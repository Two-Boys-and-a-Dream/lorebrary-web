{
  "name": "lorebrary-web",
  "version": "1.0.0",
  "type": "module",
  "description": "A template for React projects using Vite",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "pretty-check": "prettier --check .",
    "prepare": "npx simple-git-hooks",
    "ts:check": "tsc --noEmit",
    "verify": "npm run pretty-check && npm run lint && npm run ts:check && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Two-Boys-and-a-Dream/lorebrary-web.git"
  },
  "keywords": [
    "React",
    "Template",
    "Boilerplate"
  ],
  "author": "Raymond-Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Two-Boys-and-a-Dream/lorebrary-web/issues"
  },
  "homepage": "https://github.com/Two-Boys-and-a-Dream/lorebrary-web#readme",
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@tanstack/react-query": "^5.90.9",
    "@tanstack/react-query-devtools": "^5.90.2",
    "antd": "^5.28.1",
    "axios": "^1.13.2",
    "luxon": "^3.7.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "babel-plugin-react-compiler": "^1.0.0",
    "buffer": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-testing-library": "^7.13.4",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run pretty",
    "pre-push": "npm run lint"
  }
}
