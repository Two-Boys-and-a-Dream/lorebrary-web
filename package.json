{
  "name": "lorebrary-web",
  "version": "1.0.0",
  "type": "module",
  "description": "A template for React projects using Vite",
  "scripts": {
    "start": "serve dist",
    "dev": "vite --open",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "pretty-check": "prettier --check .",
    "prepare": "npx simple-git-hooks",
    "ts:check": "tsc --noEmit",
    "verify": "npm run pretty-check && npm run lint && npm run ts:check && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Two-Boys-and-a-Dream/lorebrary-web.git"
  },
  "keywords": [
    "React",
    "Template",
    "Boilerplate"
  ],
  "author": "Raymond-Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Two-Boys-and-a-Dream/lorebrary-web/issues"
  },
  "homepage": "https://github.com/Two-Boys-and-a-Dream/lorebrary-web#readme",
  "dependencies": {
    "@ant-design/icons": "^5.5.1",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@tanstack/react-query": "^5.90.9",
    "@tanstack/react-query-devtools": "^5.90.2",
    "antd": "^5.22.5",
    "axios": "^1.13.2",
    "luxon": "^3.7.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.17.0",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^30.2.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "buffer": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.1.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-testing-library": "^7.13.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run pretty",
    "pre-push": "npm run lint"
  }
}
